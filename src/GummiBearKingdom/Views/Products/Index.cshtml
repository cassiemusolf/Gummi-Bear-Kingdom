@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<GummiBearKingdom.Models.Product>

<html>
<head>
    <title>Gummi Bear Kingdom - Products</title>
</head>
<body>
    <div>
        <div>
            <img class="product-img" src="~/images/header.jpg"/>
            <h2 class="product-title">OUR PRODUCTS</h2>
        </div>
        <div class="product-list container">
            @foreach (var listProduct in Model)
            {
                <h3>@Html.DisplayFor(modelProduct => listProduct.Name)</h3>  <button class="button3 btn btn-default btn-lg">@Html.ActionLink("Details", "Details", new { id = listProduct.ProductId })</button>
            }
        </div>

        <button class="button-add btn btn-default btn-lg">@Html.ActionLink("Add a New Product", "Create")</button>
    </div>
</body>
</html>